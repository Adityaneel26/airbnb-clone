<% layout('layaouts/boilerplate') %>

<body>
  <h3 class="index_title">All listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 list">
    <% for (let listing of allListings) {%>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card col">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="Listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">verified</div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title%></b>
            <br />
            
            <% if (listing.price) { %>
              &#8377;<%= listing.price.toLocaleString("en-IN") %>
            <% } %>
            </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>